{
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vev"],
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "jsx": "react",
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  }
}
